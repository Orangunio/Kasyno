<Window x:Class="Kasyno.Views.Dialogs.LoseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przegrana" Height="250" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Foreground="Gold"
        FontFamily="Segoe UI"
        FontSize="16"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border BorderBrush="Red" BorderThickness="3" CornerRadius="20" Background="Black" Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Nagłówek "PRZEGRAŁEŚ!" w stylu kasyna -->
            <Label Content="PRZEGRAŁEŚ!"
                   FontSize="48"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10">
                <Label.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFD700" Offset="0" />
                        <GradientStop Color="#FF4500" Offset="0.5" />
                        <GradientStop Color="#FF0000" Offset="1" />
                    </LinearGradientBrush>
                </Label.Foreground>
                <Label.Effect>
                    <DropShadowEffect Color="OrangeRed" BlurRadius="15" ShadowDepth="0" Opacity="0.9"/>
                </Label.Effect>
            </Label>

            <!-- Opcjonalna wiadomość -->
            <TextBlock Text="{Binding Message}"
                       FontSize="20"
                       FontWeight="Normal"
                       TextAlignment="Center"
                       Foreground="Gold"
                       Margin="0,0,0,20"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>

            <!-- Przycisk OK -->
            <Button Content="OK"
                    Width="120" Height="45"
                    Background="Red"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    Cursor="Hand"
                    Click="Ok_Click"
                    HorizontalAlignment="Center"
                    BorderThickness="2"
                    BorderBrush="Gold"
                    Padding="5"/>
        </StackPanel>
    </Border>
</Window>
