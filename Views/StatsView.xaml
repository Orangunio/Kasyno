<Window x:Class="Kasyno.Views.StatsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kasyno.Views"
        xmlns:res="clr-namespace:System;assembly=mscorlib"
        xmlns:sv="clr-namespace:Kasyno.ViewModels"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="StatsView" Height="450" Width="800">

    <Window.DataContext>
        <sv:StatsViewModel/>
    </Window.DataContext>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <lvc:PieChart Series="{Binding PieSeries}"
                      Grid.Row="1"
                      LegendLocation="Bottom"
                      InnerRadius="60"
                      Margin="10"/>
        <!-- Historia gier -->
        <ScrollViewer Grid.Row="0"
              Grid.Column="0"
              VerticalScrollBarVisibility="Auto"
              Margin="0,0,10,0">
            <!-- ustalona wysokość dla historii -->
            <DataGrid ItemsSource="{Binding Bets}"
              AutoGenerateColumns="False"
              CanUserSortColumns="True"
              IsReadOnly="True"
              HeadersVisibility="Column"
              ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Date}" Binding="{Binding GameDate, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="*" />
                    <DataGridTextColumn Header="{DynamicResource Bet}" Binding="{Binding Amount}" Width="Auto" />
                    <DataGridTextColumn Header="{DynamicResource Description}" Binding="{Binding Description}" Width="Auto" />
                    <DataGridTextColumn Header="{DynamicResource Result}" Binding="{Binding Outcome}" Width="Auto" />
                    <DataGridTextColumn Header="{DynamicResource Value}" Binding="{Binding ResultAmount}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>


        <!-- Statystyki -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top">
            <TextBlock Text="{DynamicResource Statistics}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="{DynamicResource Games_played}"/>
                <TextBlock Text="{Binding TotalGames}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="{DynamicResource Win}"/>
                <TextBlock Text=": "/>
                <TextBlock Text="{Binding Wins}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="{DynamicResource Loss}"/>
                <TextBlock Text=": "/>
                <TextBlock Text="{Binding Losses}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="{DynamicResource Income}"/>
                <TextBlock Text="{Binding TotalWon, StringFormat={}{0}}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="{DynamicResource Lost_money}"/>
                <TextBlock Text="{Binding TotalLost, StringFormat={}{0}}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="{DynamicResource Balance}"/>
                <TextBlock Text=": "/>
                <TextBlock Text="{Binding User.Balance, StringFormat={}{0}}"/>
            </StackPanel>
        </StackPanel>

        <Button Grid.ColumnSpan="2" Grid.Row="1"
                    Content="{DynamicResource Back}"
                    Style="{StaticResource CasinoActionButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,10,10"
                    Command="{Binding ExitCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        
    </Grid>
</Window>
